\mode<presentation>

\definecolor{antidotBlue}{RGB}{0,52,82}
\definecolor{antidotOrange}{RGB}{206,95,69}

\useinnertheme[shadow=true]{rounded}
\useoutertheme{shadow}
\usecolortheme{orchid}
\usecolortheme{whale}

\setbeamercolor{palette primary}{bg=antidotBlue,fg=antidotOrange}
\setbeamercolor{palette secondary}{bg=antidotBlue,fg=antidotOrange}
\setbeamercolor{palette tertiary}{bg=antidotBlue,fg=white}
\setbeamercolor{palette quaternary}{bg=black,fg=white}
\setbeamercolor{structure}{fg=antidotBlue}
\setbeamercolor{section in toc}{fg=antidotBlue}

\logo{\includegraphics[width=.03\textwidth]{antidot-logo}}

\setbeamerfont{block title}{size={}}
\setbeamertemplate{page number in head/foot}{\insertframenumber /\inserttotalframenumber}

\usepackage[absolute,overlay]{textpos}

\setbeamercolor{framesource}{fg=gray}
\setbeamerfont{framesource}{size=\tiny}

\newcommand{\source}[1]{\begin{textblock*}{5cm}(7.35cm,8.2cm)
    \begin{beamercolorbox}[ht=0.5cm,right]{framesource}
        \usebeamerfont{framesource}\usebeamercolor[fg]{framesource} Source: {#1}
    \end{beamercolorbox}
\end{textblock*}}

